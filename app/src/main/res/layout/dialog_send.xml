<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimary"
            android:padding="4dp"
            >

            <com.example.visas.genielogiciel2.CircularTextView
                android:id="@+id/sent_group_initials"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="AEE"
                android:textSize="20dp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#fff"
                android:layout_margin="10dp"
                />

            <TextView
                android:id="@+id/sent_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="ldkfjielfkldfkgekgkekge;;d"
                android:textColor="#fff"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/delete_sent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_white"
            android:layout_gravity="right|center"/>


    </android.support.design.widget.CoordinatorLayout>
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0aa"
        android:padding="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Envoye"
            android:textSize="15dp"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/sent_time"
            android:text="10:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:textSize="15dp"/>
    </android.support.design.widget.CoordinatorLayout>


    <TextView
        android:id="@+id/sent_text_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="lores porem aklsjlafa lkskljd lkjsd sasdjhjdhfjf khkajkfke kjhsahsd khskjdhks kjhshdksdhkd kjhsdhsdk"
        android:textSize="20dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textAlignment="center"
        android:textColor="#000"
        />


</LinearLayout>